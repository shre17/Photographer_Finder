<div class="jumbotron">
  <h1 class="display-6">Editing Album</h1>
  <%= link_to photographer_photographers_path, class: "btn btn-primary btn-md" do %>
    <i class="fa fa-arrow-left"></i> Back to list
  <% end %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <%= render 'form', album: @album %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 offset-md-2 mt-2">
      <%= link_to 'Show', photographer_album_path(@album) %> |
      <%= link_to 'Back', photographer_albums_path %>
    </div>
  </div>
</div>

